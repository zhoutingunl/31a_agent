# Agent 项目环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ==================== 数据库配置 ====================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DATABASE=agent_db

# ==================== LLM API Keys ====================
# DeepSeek API
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# 七牛云大模型 API（推荐用于生产环境）
QINIU_API_KEY=sk-your-qiniu-api-key-here
QINIU_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# 百度千帆（可选，语音功能需要）
QIANFAN_API_KEY=your-qianfan-api-key
QIANFAN_SECRET_KEY=your-qianfan-secret-key

# 阿里通义千问（可选）
TONGYI_API_KEY=your-tongyi-api-key

# Ollama（可选，本地部署）
OLLAMA_BASE_URL=http://localhost:11434

# ==================== 应用配置 ====================
APP_NAME=Agent
APP_VERSION=0.1.0
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

